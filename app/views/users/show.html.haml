.mypage-content
  .my-header
    = render 'items/headder'
  .my-tag
    = render 'layouts/tag'
  .my-content
    = render 'layouts/sidebar'
    .main-bar
      .mypage
        %h2.mypage__header
          出品した商品
        .mypage__tag
          .mypage__tag__sell1
            %h3
              取引中
          .mypage__tag__sell2
            %h3
              売却済み
        .mypage__content
          .mypage__content__tag
            = image_tag 'member_photo_noimage_thumb.png',size: "80x80"
          .mypage__content__text
            出品中の商品がありません
        %h2.mypage__header
          購入した商品
        .mypage__tag
          .mypage__tag__sell1
            %h3
              取引中
          .mypage__tag__sell2
            %h3
              過去の取引
        .mypage__content
          .mypage__content__tag
            = image_tag 'member_photo_noimage_thumb.png',size: "80x80"
          .mypage__content__text
            取引中の商品がありません
  .my-footer
    = render 'items/footer'