= render 'items/headder'

%nav.breadCrumbs
  %ul
    %li
      = link_to "/" do
        FURIMA
    %li
      %i.fa.fa-angle-right
    %li
      = link_to "/" do
        メンズ
    %li
      %i.fa.fa-angle-right
    %li
      = link_to "/" do
        ジャケット/アウター
    %li
      %i.fa.fa-angle-right
    %li
      = link_to "/" do
        ノーカラージャケット
    %li
      %i.fa.fa-angle-right
    %li
      %p product2

.main
  .showMain
    .contentLeftqq
    .contentRight
      .topContent
        .itemBox
          %h2.itemBox__name
            = @item.name  
          .itemBox__body
            %ul
              - @item.images.each do |image|
                = image_tag image.url.url,class: "img_show"
              %li
          .itemBox__price
            %span
              ¥
              = @item.price
            .itemBox__price-detail
              %span （税込）
              %span 送料込み    
          .itemDetail 
            = @item.introduction
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 
                    = @item.seller.name
                %tr
                  %th カテゴリー
                  %td
                    = link_to "/" do
                      メンズ
                    %br
                      = link_to "/" do
                        ジャケット/アウター
                      %br
                        = link_to "/" do
                          ノーカラージャケット
                %tr
                  %th ブランド
                  %td
                %tr
                  %th 商品サイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 
                    = @item.condition_id
                %tr
                  %th 配送料の負担
                  %td 
                    = @item.postage_payer
                %tr
                  %th 発送元の地域
                  %td
                    = @prefectures.find(@item.prefecture_name).name
                %tr
                  %th 発送日の目安
                  %td 
                    = @item.preparation_day
          .optionalArea
            %ul
              %li#likebtn.optionalBtn.likeBtn
                %i.fa.fa-star お気に入り0
            %ul.optional
              %li.optionalBtn
                = link_to "/" do
                  %i.fa.fa-flag 不適切な商品の通報
          .item_option
            -if user_signed_in?
              - if @item.seller.id == current_user.id
                = link_to edit_item_path(@item), method: "get",class:"item_edit", data: {turbolinks: false}  do
                  商品を編集する
                = link_to item_path(@item), method: "delete", class:"item_delete" do
                  商品を削除する
              - else
                = link_to new_purchase_path, class:"item_purchase" do
                  購入画面へ進む
            - else
              = link_to user_session_path, class:"item_purchase" do
                購入画面へ進む
        .commentBox
          %ul.commentContents
          %form.new_comment{ action: "#", method: "post"} 
            %textarea{ name: "", required: ""} 
            %p.noticeMsg 
              相手のことを考え丁寧なコメントを心がけましょう。
              %br 
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
            %br
            %button.commentBtn{name: "button", type: "submit"}
              %i.fa.fa-comment コメントする
              
      %ul.links
        %li 
          = link_to "/" do   
            %i.fa.fa-angle-left
            %span 前の商品
        %li 
          = link_to "/" do   
            %span 後ろの商品
            %i.fa.fa-angle-right
      .relatedItems
        = link_to "/" do
          メンズをもっと見る
        .productLists

= render 'footer'

