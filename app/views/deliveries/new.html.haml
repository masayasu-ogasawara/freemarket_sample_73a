.content
  //header部分
  = render "layouts/item-header"
  .content-delivery
    .content-delivery__input
      //bodyのheader部分
      %h2.content-delivery__input__head
        発送元・お届け先住所入力
      //商品のフォーラム部分
      .content-delivery__input__form
        .content-delivery__input__form__inner
          = form_with local:true do |f|
            .form
              .form-group
                = f.label 'お名前',class: 'form-group__label'
                %span.form-require
                  必須
                = f.text_field :content,class: 'form-group__family',placeholder: '例)中村'
                = f.text_field :content,class: 'form-group__first',placeholder: '例)稜介'
              .form-group
                = f.label 'お名前カナ',class: 'form-group__label'
                %span.form-require
                  必須
                = f.text_field :content,class: 'form-group__family-kana',placeholder: '例)ナカムラ'
                = f.text_field :content,class: 'form-group__first-kana',placeholder: '例)リョウスケ'
              .form-group
                = f.label '都道府県',class: 'form-group__label'
                %span.form-require
                  必須
                = f.select :city,['東京都','埼玉県','千葉県','茨城県','栃木県','群馬県','神奈川県'],{},class: 'form-group__prefecture-select'
              .form-group
                = f.label '市町村',class: 'form-group__label'
                %span.form-require
                  必須
                = f.text_field :content,class: 'form-group__city',placeholder: '例)千代田区'
              .form-group
                = f.label '番地',class: 'form-group__label'
                %span.form-require
                  必須
                = f.text_field :content,class: 'form-group__number',placeholder: '例)飯田橋1-1-1'
              .form-group
                = f.label '建物名',class: 'form-group__label'
                %span.form-any
                  任意
                = f.text_field :content,class: 'form-group__building',placeholder: '例)下田ビル501'
              .form-group
                = f.label '電話',class: 'form-group__label'
                %span.form-any
                  任意
                = f.text_field :content,class: 'form-group__phone-number',placeholder: '例)09012345678'
              = f.submit '登録する',class: 'form-btn'
  //footer部分
  = render "layouts/item-footer"